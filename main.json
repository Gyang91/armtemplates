{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "defaultValue": "dev",
            "metadata": {
                "description": "Set development environment"
            }
        },
        "dataProduct": {
            "type": "string",
            "metadata": {
                "description": "Data product name"
            }
        },
        "databaseEdition": {
            "type": "string",
            "metadata": {
                "description": "Database Tier"
            }
        },
        "databaseRequestedServiceObjectiveName": {
            "type": "string",
            "metadata": {
                "description": "Database Tier correspondend scaling options"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        /*{
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "lkTemplSharedRes",
            "resourceGroup": "shared-we-devtest-rsg",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'arm-modules/sharedRes/main.json')]",
                    //"relativePath":"./arm-modules/adf/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
