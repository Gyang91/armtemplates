                    "uri": "[uri(deployment().properties.templateLink.uri, 'arm-modules/adb/adb-child/nsg/azuredeploy.json')]",
                    //"relativePath":"./arm-modules/nsg/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
