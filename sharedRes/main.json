{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "existingDataFactoryVersion": {
      "type": "string",
      "defaultValue": "V2",
      "metadata": {
        "description": "your existing data factory version"
      }
    },
    "IntegrationRuntimeName": {
      "type": "string",
      "defaultValue": "sharedIr",
      "metadata": {
        "description": "IR name must be unique in subscription"
      }
    },
    "NodeCount": {
      "type": "int",
      "defaultValue": 1,
      "maxValue": 4,
      "minValue": 1,
      "metadata": {
        "description": "the node count is between 1 and 4."
      }
    },
       "environment": {
            "type": "string",
            "defaultValue": "dev",
            "metadata": {
                "description":"Location for all services"
            }
        },
        "dataProduct": {
            "type": "string",
            "metadata": {
                "description": "Use Case name"
            }
        }
  },
  "variables": {
    "delimiters": [
      "-",
      "_"
    ],
    "prefix": "[split(parameters('IntegrationRuntimeName'), variables('delimiters'))[0]]"
  },
  "resources": [
     {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "lkTemplAkv",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(deployment().properties.templateLink.uri, 'akv/azuredeploy.json')]",
                    //"relativePath":"./arm-modules/akv/azuredeploy.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "environment": {
                        "value": "[parameters('environment')]"
                    },
                    "dataProduct": {
                        "value": "[parameters('dataProduct')]"
                    }
                }
            },
            "dependsOn": []
        },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "lkTempAdf",
      "resourceGroup": "[resourceGroup().name]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'adf/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "dataProduct": {
              "value": "" 
          },
          "environment": {
              "value": "dev"
          },
          "selfHostedIRFlag": {
              "value": true 
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat('VMtemplate-', copyIndex())]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/deployments', 'lkTempAdf')]"
      ],
      "copy": {
        "name": "vmcopy",
        "count": "[parameters('NodeCount')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'vm/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachineName": {
            "value": "[take(concat('sharedVm',copyIndex(),'-', variables('prefix')), 15)]"
          },
          "keyVaultName": {
              "value": "[reference('lkTemplAkv').outputs.keyVaultName.value]"
          },
          "subnetPrefix": {
              "value": "10.0.1.0/24"
          },
          "publicIpNewOrExisting": {
              "value": "new"
          },
          "virtualNetworkNewOrExisting": {
              "value": "new"
          },
          "addressPrefix": {
              "value": "10.0.0.0/16"
          },
          "dataProduct": {
              "value": "[parameters('dataProduct')]"
          },
          "environment": {
              "value": "[parameters('environment')]"
          }
        }
      }
    },
    {
      "apiVersion": "2021-04-01",
      "type": "Microsoft.Resources/deployments",
      "name": "[concat('IRInstalltemplate-', copyIndex())]",
      "dependsOn": [
        "vmcopy"
      ],
      "copy": {
        "name": "irinstallcopy",
        "count": "[parameters('NodeCount')]",
        "mode": "serial"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[uri(deployment().properties.templateLink.uri, 'irInstall/azuredeploy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "existingDataFactoryVersion": {
            "value": "[parameters('existingDataFactoryVersion')]"
          },
          "irId": {
            "value": "[reference(resourceId(resourceGroup().name, 'Microsoft.Resources/deployments', 'lkTempAdf')).outputs.irId.value]"
          },
          "virtualMachineName": {
            "value": "[take(concat('sharedVm',copyIndex(),'-', variables('prefix')), 15)]"
          },
          "scriptUrl": {
            "value": "[uri(deployment().properties.templateLink.uri, 'irInstall/irInstall.ps1')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "dataFactoryResourceId": {
      "type": "string",
      "value": "[reference('lkTempAdf').outputs.dataFactoryResourceId.value]"
    }
  }
}
